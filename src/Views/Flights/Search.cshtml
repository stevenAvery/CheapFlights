@{
    ViewData["Title"] = "Search Flights";
}

<form>
    <div class="form-row">
        <div class="col-5">
            <input type="text" class="form-control" id="origin" placeholder="Origin City or IataCode">
        </div>
        <div class="col-5">
            <input type="text" class="form-control" id="destination" placeholder="Destination City or IataCode">
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
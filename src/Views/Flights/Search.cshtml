@model CheapFlights.Models.SearchModel

@{
    ViewData["Title"] = "Search Flights";
}

@*@using (Ajax.BeginForm("Search", "Flights", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "cheapestPath" }))*@
@using (Html.BeginForm("Search", "Flights", FormMethod.Post, new { id = "searchForm" })) {
    <div class="form-row">
        <div class="col-5">
            @Html.DropDownListFor(
                m => m.SelectedOriginId, 
                new SelectList(Model.Airports, "IataCode", "City"),
                "-- Select Origin --",
                new {
                    @class = "custom-select" 
                })
            @Html.ValidationMessageFor(m => m.SelectedOriginId)
        </div>
        <div class="col-5">
            @Html.DropDownListFor(
                m => m.SelectedDestinationId, 
                new SelectList(Model.Airports, "IataCode", "City"),
                "-- Select Destination --",
                new {
                    @class = "custom-select" 
                })
            @Html.ValidationMessageFor(m => m.SelectedDestinationId)
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary btn-block">Search</button>
        </div>
    </div>
}

@if (Model.Flights != null) {
    <div class="pt-4">
        <table id="flightsTable" class="table table-bordered" width="100%">
        <thead>
            <tr>
                <th>Origin City</th>
                <th>Origin IATA Code</th>
                <th>Destination City</th>
                <th>Destination IATA Code</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
        @foreach (FlightModel flight in Model.Flights) {
            <tr>
                <td>@flight.Origin.City</td>
                <td>@flight.Origin.IataCode</td>
                <td>@flight.Destination.City</td>
                <td>@flight.Destination.IataCode</td>
                <td>@flight.Cost</td>
            </tr>
        }
        </tbody>
        </table>
    </div>
}

<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

